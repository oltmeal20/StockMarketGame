<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stockProjectGUI.OpenerController">
   <children>
      <Label fx:id="openerTitleLabel" text="Stock Market Investment Fantasy League" textFill="#31f5f2">
         <font>
            <Font name="Goudy Old Style" size="70.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets top="50.0" />
         </padding>
      </Label>
      <Button fx:id="playButton" mnemonicParsing="false" onAction="#playButtonPressed" prefHeight="100.0" prefWidth="400.0" text="PLAY" textFill="#00ff71" underline="true">
         <font>
            <Font name="Goudy Old Style" size="50.0" />
         </font>
         <VBox.margin>
            <Insets top="150.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitButtonPressed" prefHeight="100.0" prefWidth="400.0" text="EXIT" textFill="#979797">
         <font>
            <Font name="Goudy Old Style" size="50.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
